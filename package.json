{
	"name": "normalize-type",
	"version": "1.3.4",
	"description": "Normalizes string JavaScript values to have real type (so \"123\" becomes number 123 etc).",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"scripts": {
		"start": "yarn test-watch",
		"tidy": "yarn tidy:build && yarn tidy:coverage",
		"tidy:build": "rimraf build",
		"tidy:coverage": "rimraf coverage",
		"build": "yarn tidy && tsc",
		"lint": "tslint src/**/*.ts",
		"test": "yarn tidy:coverage && jest --collectCoverage",
		"test-watch": "yarn tidy:coverage && jest --watch --collectCoverage",
		"coveralls": "cat ./coverage/lcov.info | coveralls",
		"prettier":
			"prettier --trailing-comma all --single-quote --use-tabs --no-bracket-spacing --print-width 120 --write src/**/*.ts",
		"precommit": "yarn lint && yarn test && yarn prettier && git add -A"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kallaspriit/normalize-type.git"
	},
	"keywords": ["normalize", "javascript", "type", "types", "real", "number", "boolean"],
	"author": "Priit Kallas <kallaspriit@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kallaspriit/normalize-type/issues"
	},
	"homepage": "https://github.com/kallaspriit/normalize-type#readme",
	"dependencies": {
		"coveralls": "^2.13.1"
	},
	"devDependencies": {
		"@types/jest": "^20.0.8",
		"husky": "^0.14.3",
		"jest": "^20.0.4",
		"prettier": "^1.6.1",
		"rimraf": "^2.6.1",
		"ts-jest": "^20.0.14",
		"tslint": "^5.7.0",
		"tslint-config-prettier": "^1.5.0",
		"tslint-eslint-rules": "^4.1.1",
		"typescript": "^2.5.2"
	},
	"jest": {
		"transform": {
			".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
		},
		"roots": ["tests"],
		"testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
		"moduleFileExtensions": ["ts", "tsx", "js", "json"]
	},
	"config": {
		"ghooks": {
			"pre-commit": "npm run test:single && npm run check-coverage"
		},
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		}
	}
}
